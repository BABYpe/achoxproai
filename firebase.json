{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "redirects": [
      {
        "source": "/:path*",
        "destination": "https://:host/:path*",
        "type": 301,
        "condition": "req.headers.x-forwarded-proto === 'http'"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "apphosting": {
    "backendId": "studio",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
